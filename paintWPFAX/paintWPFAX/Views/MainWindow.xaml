<Window
    x:Class="paintWPFAX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:local="clr-namespace:paintWPFAX"
    mc:Ignorable="d"
    Title="{Binding WindowTitle}"
    Height="450"
    Width="800">

    <DockPanel>

        <Menu
            DockPanel.Dock="Top">
            <MenuItem
                Header="Файл">
                <MenuItem
                    Header="Открыть"
                    Click="OpenMenuItem_Click" />
                <MenuItem
                    Header="Сохранить как..."
                    Click="SaveAsMenuItem_Click" />
            </MenuItem>
        </Menu>

        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                Content="Pencil"
                Click="PencilButton_Click" />
            <Button
                Content="Eraser"
                Click="EraserButton_Click" />
            <Button
                Content="Line"
                Click="LineButton_Click" />
            <Button
                Content="Clear"
                Click="ClearButton_Click" />
            <!--
            <Button Content="Select" Click="ButtonSelect_Click"/>
            -->
        </StackPanel>

        <StackPanel
            DockPanel.Dock="Left"
            Orientation="Vertical">
            <colorpicker:PortableColorPicker
                ColorState="{Binding ElementName=ColorPicker, Path=ColorState, Mode=TwoWay}" Width="40" Height="40"/>
        </StackPanel>

        <Border
            BorderThickness="1"
            BorderBrush="Gray"
            Margin="5">
            <skia:SKElement
                x:Name="DrawingSurface"
                PaintSurface="DrawingSurface_PaintSurface"
                MouseDown="DrawingSurface_MouseDown"
                MouseMove="DrawingSurface_MouseMove"
                MouseUp="DrawingSurface_MouseUp" />
        </Border>

    </DockPanel>

</Window>
